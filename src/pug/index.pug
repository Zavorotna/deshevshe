doctype html
html(lang="uk")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes, maximum-scale=2.0")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
        link(rel="stylesheet" href="css/style.css")
        title Дешевше - інтернет магазин необхідних товарів для всієї родини
    body#body
        header
            .fixed-header
                include components/header
        main 
            .d-flex.flex-arrow
                a(href="#body").arrow-up.arrow
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="10" viewBox="0 0 18 10" fill="none">
                        <path d="M1 9L9 0.999999L17 9" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                a(href="#footer").arrow-down.arrow
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="10" viewBox="0 0 18 10" fill="none">
                        <path d="M1 0.999999L9 9L17 1" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
            section.main
                .main-bg
                    .new-colection.position-center
                        p мультимаркет для усієї родини
                        p -30% на усі колекції літніх речей
                        a(href="catalog.html").yellow-cta.cta-main в каталог 
            section.perevagi
                .wrapper
                    h2 наші переваги
                    .flex-between 
                        div.d-flex.item-center
                            picture 
                                img(src="img/oplata.svg", alt="")
                            p оплата при отриманні
                        div.d-flex.item-center
                            picture 
                                img(src="img/obmin.svg", alt="")
                            p обмін та повернення
                        div.d-flex.item-center
                            picture 
                                img(src="img/delivery.svg", alt="")
                            p швидка доставка
                        div.d-flex.item-center
                            picture 
                                img(src="img/yakist.svg", alt="")
                            p гарантія якості
                        div.d-flex.item-center
                            picture 
                                img(src="img/kupyty.svg", alt="")
                            p покупка 
                                span в 1 клік
            section.popular 
                h2 популярні категорії
                .wrapper.flex-between.popular-elements
                    a(href="#")
                        picture
                            img(src="img/img1.png", alt="")
                        span Сумки
                    a(href="#") 
                        picture
                            img(src="img/img2.png", alt="")
                        span Футболки
                    a(href="#") 
                        picture
                            img(src="img/img3.png", alt="")
                        span Велосипедки
                    a(href="#") 
                        picture
                            img(src="img/img4.png", alt="")
                        span Взуття
                    a(href="#") 
                        picture
                            img(src="img/img5.png", alt="")
                        span Штани
                    a(href="#") 
                        picture
                            img(src="img/img6.png", alt="")
                        span Піжами
                    a(href="#") 
                        picture
                            img(src="img/img7.png", alt="")
                        span Аксесуари
            .wrapper.top-prodaz-main
                include components/top-prodaz
                        
                .view-all
                    .flex-between 
                        a(href="#").left-arrow.gray-sircle 
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
                                <path d="M23 13L15 20.5L23 28" stroke="#121212" stroke-linecap="round"/>
                            </svg>
                        a(href="#").right-arrow.gray-sircle 
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
                                <path d="M17 13L25 20.5L17 28" stroke="#121212" stroke-linecap="round"/>
                            </svg>
                    a(href="#") показати усі 
        #footer
            include components/footer

    script(src="js/scripts.js")

